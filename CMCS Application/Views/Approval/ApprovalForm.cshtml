@model Claim

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Claim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Submit New Claim</h2>
      
        <form asp-action="ClaimForm" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="LecturerName" class="form-label">Lecturer Name</label>
                <input asp-for="LecturerName" class="form-control" type="text" required />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LecturerEmail" class="form-label">Email</label>
                <input asp-for="LecturerEmail" class="form-control" type="email" required />
                <span asp-validation-for="LecturerEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
                <input asp-for="HoursWorked" class="form-control" type="number" required />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HourlyRate" class="form-label">Hourly Rate</label>
                <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AdditionalNotes" class="form-label">Additional Notes</label>
                <textarea asp-for="AdditionalNotes" class="form-control"></textarea>
                <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="files" class="form-label">Upload Supporting Documents</label>
                <input type="file" name="files" class="form-control" multiple />
            </div>
            <div class="mb-3">
                <input type="submit" value="Submit Claim" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

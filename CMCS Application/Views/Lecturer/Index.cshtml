@{
}
@model IEnumerable<CMCS_Application.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturer Index";
}

<h2>Lecturer List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
                <tr>
                    <td>@lecturer.LecturerName</td>
                    <td>@lecturer.LecturerEmail</td>
                    <td>
                        <a href="@Url.Action("Edit", "Lecturer", new { id = lecturer.Id })" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
        }
    </tbody>
</table>


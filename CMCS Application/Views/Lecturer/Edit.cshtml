@model CMCS_Application.Models.Lecturer
@* pull data from lecturer model *@

@{
    ViewData["Title"] = "Edit Lecturer";
}

<h2>Edit Lecturer</h2>
@* https://www.w3schools.com/html/html_forms.asp *@
@* https://www.w3schools.com/html/html_forms_attributes.asp *@
<form asp-action="Edit" method="post"> @* form to edit the lecturer data *@
    <div class="form-group">
        <label for="LecturerName">Lecturer Name</label>
        <input type="text" class="form-control" id="LecturerName" name="LecturerName" value="@Model.LecturerName" required />
    </div>

    <div class="form-group">
        <label for="LecturerEmail">Lecturer Email</label>
        <input type="email" class="form-control" id="LecturerEmail" name="LecturerEmail" value="@Model.LecturerEmail" required />
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("Index", "Lecturer")" class="btn btn-secondary">Cancel</a>
</form>
